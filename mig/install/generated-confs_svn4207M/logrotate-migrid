/home/mig/state/log/*.log /home/mig/state/log/*.out {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 mig mig
	# NOTE we need root to restart services
	#su mig mig
	su root mig
	sharedscripts
	postrotate
           service migrid reload; \
           service httpd reload;
	endscript
}
